//Conditionals Exercise 1 (https://perscholas.instructure.com/courses/1123/assignments/216805)

const num = -10

results = num >= 0 ? `${num} is positive` : `${num} is negative`
console.log(results);

// Conditionals Exercise 2

userAge = 17

access = userAge >=18 ? "Welcome User 18+" : "You are not old enough for access"
console.log(access);

// Conditionals Exercise 3

const number = 100
if (number >= 0 && number > 100){
    console.log("Number is positive & greater than 100");
} 
else if  (number >= 0 && number < 100){
    console.log("Number is positive BUT less than 100");
} 
else if (number === 100){
    console.log("Number is positive & equal to 100");
}
else{
    console.log("Number is negative.");
}


// Conditionals Challenge

// Change the number of numToCheck to test your code
