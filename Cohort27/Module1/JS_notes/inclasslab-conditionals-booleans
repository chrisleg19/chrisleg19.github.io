// Write your code below

if (numToCheck === 0){
    console.log("Your number is 0 ");
}
else if (numToCheck >= 0){
    console.log("Your number is Positive");
} else{
    console.log("Your number is Negative");
}
 
// Boolean Challenge (https://perscholas.instructure.com/courses/1123/assignments/216807)

// 1.
const small = 2;
const large = 5342;
// ADD CODE BELOW (isSmaller)
const isSmaller = small < large 
console.log(isSmaller);

// 2.
const num1 = 45;
const string = "45";
// ADD CODE BELOW (isLooselyEqual and isStrictlyEqual)
const isLooselyEqual = num1 == string
const isStrictlyEqual = num1 === string
console.log(isLooselyEqual, isStrictlyEqual);

 

// 3.
const isTrue = true;
const isFalse = false;
// ADD CODE BELOW (isTrueNotFalse)

isTrueNotFalse = isTrue !== isFalse
console.log(isTrueNotFalse);


